+void ff_set_energyf(float *v_out, const float *v_in, float energy,
+                    const int length)
+{
+    int i;
+    float scalefactor = ff_energyf(v_in, length);
+    if (scalefactor)
+        scalefactor = sqrt(energy / scalefactor);
+    for (i = 0; i < length; i++)
+        v_out[i] = v_in[i] * scalefactor;
+}
